@0 = ~Iblith! {Aas!} Bewohner der Oberfläche! Wieder, mein Sargtlin {Drow-Krieger}, werden wir durch ogglins {Feinde} unterbrochen. Feinde des veldrin {Schatten}. Von oben! ~
@1 = ~Warum seid Ihr gekommen, rivvil {Mensch}? ~
@2 = ~Ich bin Quarval-sharess {Göttin Lloth}. Ich will zhaun {wissen} warum Ihr in die Tiefen reist? Es ist mein Yorn {Diener} - der durch Eure waela {unbewussten} Taten leidet. ~
@3 = ~Ihr weigert Euch zu antworten? Fein. So sei es. ~
@4 = ~Vel'uss zhaun alur taga Lil Quarval-Sharess! Mein Drow, xun izil dos phuul quarten, lueth dro. (elfisch für: Wer weiß es besser als die Göttin? Mein Drow, tu, was man dir befiehlt, und lebe.} ~
@5 = ~Elgg der darthiir {Schlagt den Oberflächenelfen nieder!} ~
@6 = ~Denkt Ihr, dass Ihr das leicht gewinnen könnt, darthiir? {Oberflächenelf} Ihr seid iblith {Aas}. Ich werde brorna {überraschung} für Euch planen. ~
@7 = ~Lolth tlu malla; jal ultrinnan zhah xundus! (elfisch für: Gepriesen sei Lloth; jeder Sieg ist ihr Tun.}~
